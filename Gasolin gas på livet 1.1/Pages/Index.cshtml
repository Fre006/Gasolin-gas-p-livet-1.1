@page
@model IndexModel
@{
    ViewData["Title"] = "Gasolin'";
}

<div class="text-center">
    <h1 class="display-4 IndexFont"><b>Gasolin'</b></h1>
    <h2 class="display-3 IndexFont"><b>Livet på Gas</b></h2>
</div>
<!-- Carousel -->
<div id="indexPictures" class="carousel slide" data-bs-ride="carousel">

    <!-- Indicators/dots -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#indexPictures" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#indexPictures" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#indexPictures" data-bs-slide-to="2"></button>
    </div>

    <!-- The slideshow/carousel -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Images/standard_compressed_Gasolin-3099545233.jpg" alt="Gas album cover" class="d-block w-100">
        </div>
        <div class="carousel-item">
            <img src="~/Images/k2EWcPWa6RC4cWTLad8xok41-609151966.jpg" alt="Gasolin' gruppebillede" class="d-block w-100">
        </div>
        <div class="carousel-item">
            <img src="~/Images/nationalskjald-kim-larsen-er-doed---72-aar-3357702441.jpg" alt="Gasolin' gruppebillede 2" class="d-block w-100">
        </div>
    </div>

    <!-- Left and right controls/icons -->
    <button class="carousel-control-prev" type="button" data-bs-target="#indexPictures" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#indexPictures" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>